{
    "version": 2,
    "builds": [
        {
            "src": "dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(?!static|assets|favicon.ico)(.*)",
            "dest": "/dist/index.html"
        },
        {
            "src": "/favicon.ico",
            "headers": {
                "Cache-Control": "public, max-age=3600"
            },
            "continue": true
        },
        {
            "src": "/static/(.*)",
            "dest": "/dist/static/$1"
        },
        {
            "src": "/(.*)\\.jpg",
            "dest": "/dist/$1.jpg"
        },
        {
            "src": "/assets/(.*)",
            "dest": "/dist/assets/$1"
        }
    ]
}